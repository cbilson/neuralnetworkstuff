<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	Width="400"
	Height="300">
  <StackPanel>
    <Label Width="200">Neural Network Visualations</Label>
    <!-- the ShowGridLines property is debug only so you can see the gridlines -->
    <StackPanel Orientation="Horizontal">
      <TextBlock TextAlignment="Right">Weights</TextBlock>
      <Grid Width="400" Height="400">
      
        <Grid.ColumnDefinitions >
          <ColumnDefinition Width="100" />
          <ColumnDefinition Width="25" />
          <ColumnDefinition Width="25" />
          <ColumnDefinition Width="25" />
          <ColumnDefinition Width="25" />
          <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="25" />
          <RowDefinition Height="25" />
          <RowDefinition Height="25" />
          <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" Grid.Column="1" />
        <TextBox Grid.Row="0" Grid.Column="2" />
        <TextBox Grid.Row="0" Grid.Column="3" />
        <TextBox Grid.Row="0" Grid.Column="4" />
  
        <TextBox Grid.Row="1" Grid.Column="1" />
        <TextBox Grid.Row="1" Grid.Column="2" />
        <TextBox Grid.Row="1" Grid.Column="3" />
        <TextBox Grid.Row="1" Grid.Column="4" />
  
        <TextBox Grid.Row="2" Grid.Column="1" />
        <TextBox Grid.Row="2" Grid.Column="2" />
        <TextBox Grid.Row="2" Grid.Column="3" />
        <TextBox Grid.Row="2" Grid.Column="4" />
  
        <TextBox Grid.Row="3" Grid.Column="1" />
        <TextBox Grid.Row="3" Grid.Column="2" />
        <TextBox Grid.Row="3" Grid.Column="3" />
        <TextBox Grid.Row="3" Grid.Column="4" />
  
      </Grid>  
    </StackPanel>
  </StackPanel>
</Window>
